{
    "name": "jonpugh/ash-ops",
    "description": "Automated Ash",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Pugh",
            "email": "jon@thinkdrop.net"
        }
    ],
    "require": {
        "php": ">=8"
    },
    "require-dev": {
        "consolidation/robo": "^4",
        "knplabs/github-api": "^3.8",
        "guzzlehttp/guzzle": "^7.0.1",
        "http-interop/http-factory-guzzle": "^1.0"
    },
    "scripts": {
        "dev:build": [
            "docker-compose exec ash ansible-playbook /usr/share/ash/playbook.yml"
        ],
        "dev:start": [
            "docker-compose up -d --build && docker-compose exec ash ansible-playbook /usr/share/ash/playbook.yml"
        ],
        "dev:ansible:install": [
            "ansible-galaxy install -r roles.yml -p roles --force"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.0.24"
        },
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
